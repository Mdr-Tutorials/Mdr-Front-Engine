{
  "name": "mdr-front-engine",
  "version": "0.1.0",
  "private": true,
  "description": "可视化前端开发平台 - 从设计到部署的全流程解决方案",
  "license": "MIT",
  "packageManager": "pnpm@10.28.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@mdr/web",
    "dev:backend": "cd apps/backend && (air -c .air.toml || go run ./cmd/server)",
    "dev:backend:hot": "cd apps/backend && air -c .air.toml",
    "dev:docs": "turbo run dev --filter=@mdr/docs",
    "dev:cli": "turbo run dev --filter=@mdr/cli",
    "dev:vscode": "turbo run dev --filter=@mdr/vscode",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@mdr/web",
    "build:backend": "cd apps/backend && make build",
    "build:docs": "turbo run build --filter=@mdr/docs",
    "build:cli": "turbo run build --filter=@mdr/cli",
    "build:vscode": "turbo run build --filter=@mdr/vscode",
    "storybook:ui": "turbo run storybook --filter=@mdr/ui",
    "build-storybook:ui": "turbo run build-storybook --filter=@mdr/ui",
    "test": "turbo run test",
    "test:web": "pnpm --filter @mdr/web test",
    "test:web:watch": "pnpm --filter @mdr/web test:watch",
    "test:web:coverage": "pnpm --filter @mdr/web test:coverage",
    "lint": "turbo run lint",
    "generate:tailwind-runtime-snapshot": "node --experimental-strip-types scripts/generate-tailwind-runtime-snapshot.mjs",
    "format": "pnpm run format:all",
    "prettier": "pnpm run format:all",
    "format:all": "pnpm run format:prettier && pnpm run format:go",
    "format:prettier": "prettier --write \"{apps,packages,specs,scripts}/**/*.{ts,tsx,js,jsx,json,md,yml,yaml,scss,css,html}\" \"*.{json,md,yml,yaml}\"",
    "format:go": "cd apps/backend && go fmt ./...",
    "clean": "turbo run clean && rm -rf node_modules",
    "cli": "node apps/cli/bin/mdr.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "turbo": "^2.6.0",
    "typescript": "~5.9.3"
  }
}
