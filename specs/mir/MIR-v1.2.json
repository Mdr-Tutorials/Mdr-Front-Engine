{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MIR Document v1.2 (Draft)",
  "type": "object",
  "required": ["version", "ui"],
  "properties": {
    "version": {
      "type": "string",
      "const": "1.2"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "author": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "ui": {
      "type": "object",
      "required": ["root"],
      "properties": {
        "root": { "$ref": "#/$defs/componentNode" }
      },
      "additionalProperties": false
    },
    "logic": {
      "type": "object",
      "properties": {
        "props": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/propDef" }
        },
        "state": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/stateDef" }
        },
        "graphs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": true
    }
  },
  "patternProperties": {
    "^x-[a-zA-Z0-9_.-]+$": {}
  },
  "$defs": {
    "identifier": {
      "type": "string",
      "pattern": "^[a-zA-Z_$][a-zA-Z0-9_$-]*$"
    },
    "pathString": {
      "type": "string",
      "minLength": 1
    },
    "paramRef": {
      "type": "object",
      "required": ["$param"],
      "properties": {
        "$param": { "type": "string" }
      },
      "additionalProperties": false
    },
    "stateRef": {
      "type": "object",
      "required": ["$state"],
      "properties": {
        "$state": { "type": "string" }
      },
      "additionalProperties": false
    },
    "dataRef": {
      "type": "object",
      "required": ["$data"],
      "properties": {
        "$data": { "$ref": "#/$defs/pathString" }
      },
      "additionalProperties": false
    },
    "itemRef": {
      "type": "object",
      "required": ["$item"],
      "properties": {
        "$item": { "$ref": "#/$defs/pathString" }
      },
      "additionalProperties": false
    },
    "indexRef": {
      "type": "object",
      "required": ["$index"],
      "properties": {
        "$index": { "type": "boolean", "const": true }
      },
      "additionalProperties": false
    },
    "scopeSourceRef": {
      "anyOf": [
        { "$ref": "#/$defs/paramRef" },
        { "$ref": "#/$defs/stateRef" },
        { "$ref": "#/$defs/dataRef" },
        { "$ref": "#/$defs/itemRef" }
      ]
    },
    "valueOrRef": {
      "anyOf": [
        { "type": "string" },
        { "type": "number" },
        { "type": "boolean" },
        { "type": "null" },
        { "type": "object", "additionalProperties": true },
        { "type": "array", "items": {} },
        { "$ref": "#/$defs/paramRef" },
        { "$ref": "#/$defs/stateRef" },
        { "$ref": "#/$defs/dataRef" },
        { "$ref": "#/$defs/itemRef" },
        { "$ref": "#/$defs/indexRef" }
      ]
    },
    "nodeDataScope": {
      "type": "object",
      "properties": {
        "source": { "$ref": "#/$defs/scopeSourceRef" },
        "pick": { "$ref": "#/$defs/pathString" },
        "extend": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/valueOrRef" }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "nodeListRender": {
      "type": "object",
      "required": ["source"],
      "properties": {
        "source": { "$ref": "#/$defs/scopeSourceRef" },
        "itemAs": { "$ref": "#/$defs/identifier" },
        "indexAs": { "$ref": "#/$defs/identifier" },
        "keyBy": { "$ref": "#/$defs/pathString" },
        "emptyNodeId": { "$ref": "#/$defs/identifier" }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "eventBinding": {
      "type": "object",
      "required": ["trigger"],
      "properties": {
        "trigger": { "type": "string" },
        "action": { "type": "string" },
        "params": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/valueOrRef" }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "componentNode": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "$ref": "#/$defs/identifier" },
        "type": { "type": "string" },
        "text": {
          "anyOf": [
            { "type": "string" },
            { "$ref": "#/$defs/paramRef" },
            { "$ref": "#/$defs/stateRef" },
            { "$ref": "#/$defs/dataRef" },
            { "$ref": "#/$defs/itemRef" },
            { "$ref": "#/$defs/indexRef" }
          ]
        },
        "style": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/valueOrRef" }
        },
        "props": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/valueOrRef" }
        },
        "data": { "$ref": "#/$defs/nodeDataScope" },
        "list": { "$ref": "#/$defs/nodeListRender" },
        "events": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/eventBinding" }
        },
        "children": {
          "type": "array",
          "items": { "$ref": "#/$defs/componentNode" }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "propDef": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "type": "string" },
        "description": { "type": "string" },
        "default": {}
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": true
    },
    "stateDef": {
      "type": "object",
      "required": ["initial"],
      "properties": {
        "type": { "type": "string" },
        "initial": {}
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
