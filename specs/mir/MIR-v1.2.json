{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MIR Document v1.2 (Draft)",
  "type": "object",
  "required": ["version", "ui"],
  "properties": {
    "version": {
      "type": "string",
      "const": "1.2"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "author": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "ui": {
      "type": "object",
      "required": ["root"],
      "properties": {
        "root": { "$ref": "#/$defs/componentNode" }
      },
      "additionalProperties": false
    },
    "logic": {
      "type": "object",
      "properties": {
        "props": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/propDef" }
        },
        "state": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/stateDef" }
        },
        "graphs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": true
    },
    "animation": {
      "$ref": "#/$defs/animationDef"
    }
  },
  "patternProperties": {
    "^x-[a-zA-Z0-9_.-]+$": {}
  },
  "$defs": {
    "identifier": {
      "type": "string",
      "pattern": "^[a-zA-Z_$][a-zA-Z0-9_$-]*$"
    },
    "pathString": {
      "type": "string",
      "minLength": 1
    },
    "paramRef": {
      "type": "object",
      "required": ["$param"],
      "properties": {
        "$param": { "type": "string" }
      },
      "additionalProperties": false
    },
    "stateRef": {
      "type": "object",
      "required": ["$state"],
      "properties": {
        "$state": { "type": "string" }
      },
      "additionalProperties": false
    },
    "dataRef": {
      "type": "object",
      "required": ["$data"],
      "properties": {
        "$data": { "$ref": "#/$defs/pathString" }
      },
      "additionalProperties": false
    },
    "itemRef": {
      "type": "object",
      "required": ["$item"],
      "properties": {
        "$item": { "$ref": "#/$defs/pathString" }
      },
      "additionalProperties": false
    },
    "indexRef": {
      "type": "object",
      "required": ["$index"],
      "properties": {
        "$index": { "type": "boolean", "const": true }
      },
      "additionalProperties": false
    },
    "scopeSourceRef": {
      "anyOf": [
        { "$ref": "#/$defs/paramRef" },
        { "$ref": "#/$defs/stateRef" },
        { "$ref": "#/$defs/dataRef" },
        { "$ref": "#/$defs/itemRef" }
      ]
    },
    "valueOrRef": {
      "anyOf": [
        { "type": "string" },
        { "type": "number" },
        { "type": "boolean" },
        { "type": "null" },
        { "type": "object", "additionalProperties": true },
        { "type": "array", "items": {} },
        { "$ref": "#/$defs/paramRef" },
        { "$ref": "#/$defs/stateRef" },
        { "$ref": "#/$defs/dataRef" },
        { "$ref": "#/$defs/itemRef" },
        { "$ref": "#/$defs/indexRef" }
      ]
    },
    "nodeDataScope": {
      "type": "object",
      "properties": {
        "source": { "$ref": "#/$defs/scopeSourceRef" },
        "pick": { "$ref": "#/$defs/pathString" },
        "extend": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/valueOrRef" }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "nodeListRender": {
      "type": "object",
      "required": ["source"],
      "properties": {
        "source": { "$ref": "#/$defs/scopeSourceRef" },
        "itemAs": { "$ref": "#/$defs/identifier" },
        "indexAs": { "$ref": "#/$defs/identifier" },
        "keyBy": { "$ref": "#/$defs/pathString" },
        "emptyNodeId": { "$ref": "#/$defs/identifier" }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "animationIterations": {
      "anyOf": [
        { "type": "integer", "minimum": 1 },
        { "type": "string", "const": "infinite" }
      ]
    },
    "animationKeyframe": {
      "type": "object",
      "required": ["atMs", "value"],
      "properties": {
        "atMs": { "type": "number", "minimum": 0 },
        "value": {
          "anyOf": [{ "type": "number" }, { "type": "string" }]
        },
        "easing": { "type": "string" },
        "hold": { "type": "boolean" }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "styleTrackProperty": {
      "type": "string",
      "enum": [
        "opacity",
        "transform.translateX",
        "transform.translateY",
        "transform.scale",
        "color"
      ]
    },
    "cssFilterFn": {
      "type": "string",
      "enum": [
        "blur",
        "brightness",
        "contrast",
        "grayscale",
        "hue-rotate",
        "invert",
        "saturate",
        "sepia"
      ]
    },
    "animationStyleTrack": {
      "type": "object",
      "required": ["id", "kind", "property", "keyframes"],
      "properties": {
        "id": { "$ref": "#/$defs/identifier" },
        "kind": { "type": "string", "const": "style" },
        "property": { "$ref": "#/$defs/styleTrackProperty" },
        "keyframes": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/animationKeyframe" }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "animationCssFilterTrack": {
      "type": "object",
      "required": ["id", "kind", "fn", "keyframes"],
      "properties": {
        "id": { "$ref": "#/$defs/identifier" },
        "kind": { "type": "string", "const": "css-filter" },
        "fn": { "$ref": "#/$defs/cssFilterFn" },
        "unit": {
          "type": "string",
          "enum": ["px", "%", "deg"]
        },
        "keyframes": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/animationKeyframe" }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "animationSvgFilterAttrTrack": {
      "type": "object",
      "required": [
        "id",
        "kind",
        "filterId",
        "primitiveId",
        "attr",
        "keyframes"
      ],
      "properties": {
        "id": { "$ref": "#/$defs/identifier" },
        "kind": { "type": "string", "const": "svg-filter-attr" },
        "filterId": { "$ref": "#/$defs/identifier" },
        "primitiveId": { "$ref": "#/$defs/identifier" },
        "attr": { "type": "string", "minLength": 1 },
        "keyframes": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/animationKeyframe" }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "animationTrack": {
      "anyOf": [
        { "$ref": "#/$defs/animationStyleTrack" },
        { "$ref": "#/$defs/animationCssFilterTrack" },
        { "$ref": "#/$defs/animationSvgFilterAttrTrack" }
      ]
    },
    "animationBinding": {
      "type": "object",
      "required": ["id", "targetNodeId", "tracks"],
      "properties": {
        "id": { "$ref": "#/$defs/identifier" },
        "targetNodeId": { "$ref": "#/$defs/identifier" },
        "tracks": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/animationTrack" }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "svgFilterPrimitiveType": {
      "type": "string",
      "enum": [
        "feGaussianBlur",
        "feColorMatrix",
        "feComponentTransfer",
        "feOffset",
        "feBlend",
        "feMerge"
      ]
    },
    "svgFilterPrimitiveDef": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "$ref": "#/$defs/identifier" },
        "type": { "$ref": "#/$defs/svgFilterPrimitiveType" },
        "in": { "type": "string" },
        "in2": { "type": "string" },
        "result": { "type": "string" },
        "attrs": {
          "type": "object",
          "additionalProperties": {
            "anyOf": [{ "type": "number" }, { "type": "string" }]
          }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "svgFilterDef": {
      "type": "object",
      "required": ["id", "primitives"],
      "properties": {
        "id": { "$ref": "#/$defs/identifier" },
        "units": {
          "type": "string",
          "enum": ["objectBoundingBox", "userSpaceOnUse"]
        },
        "primitives": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/svgFilterPrimitiveDef" }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "animationTimeline": {
      "type": "object",
      "required": ["id", "name", "durationMs", "bindings"],
      "properties": {
        "id": { "$ref": "#/$defs/identifier" },
        "name": { "type": "string", "minLength": 1 },
        "durationMs": { "type": "number", "exclusiveMinimum": 0 },
        "delayMs": { "type": "number", "minimum": 0 },
        "iterations": { "$ref": "#/$defs/animationIterations" },
        "direction": {
          "type": "string",
          "enum": ["normal", "reverse", "alternate", "alternate-reverse"]
        },
        "fillMode": {
          "type": "string",
          "enum": ["none", "forwards", "backwards", "both"]
        },
        "easing": { "type": "string" },
        "bindings": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/animationBinding" }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "animationDef": {
      "type": "object",
      "required": ["version", "timelines"],
      "properties": {
        "version": { "type": "number", "const": 1 },
        "timelines": {
          "type": "array",
          "items": { "$ref": "#/$defs/animationTimeline" }
        },
        "svgFilters": {
          "type": "array",
          "items": { "$ref": "#/$defs/svgFilterDef" }
        },
        "x-animationEditor": {
          "$ref": "#/$defs/animationEditorState"
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "animationEditorState": {
      "type": "object",
      "required": ["version"],
      "properties": {
        "version": { "type": "number", "const": 1 },
        "activeTimelineId": { "$ref": "#/$defs/identifier" },
        "cursorMs": { "type": "number", "minimum": 0 },
        "zoom": { "type": "number", "exclusiveMinimum": 0 },
        "expandedTrackIds": {
          "type": "array",
          "items": { "$ref": "#/$defs/identifier" }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "eventBinding": {
      "type": "object",
      "required": ["trigger"],
      "properties": {
        "trigger": { "type": "string" },
        "action": { "type": "string" },
        "params": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/valueOrRef" }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "componentNode": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "$ref": "#/$defs/identifier" },
        "type": { "type": "string" },
        "text": {
          "anyOf": [
            { "type": "string" },
            { "$ref": "#/$defs/paramRef" },
            { "$ref": "#/$defs/stateRef" },
            { "$ref": "#/$defs/dataRef" },
            { "$ref": "#/$defs/itemRef" },
            { "$ref": "#/$defs/indexRef" }
          ]
        },
        "style": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/valueOrRef" }
        },
        "props": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/valueOrRef" }
        },
        "data": { "$ref": "#/$defs/nodeDataScope" },
        "list": { "$ref": "#/$defs/nodeListRender" },
        "events": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/eventBinding" }
        },
        "children": {
          "type": "array",
          "items": { "$ref": "#/$defs/componentNode" }
        }
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": false
    },
    "propDef": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "type": "string" },
        "description": { "type": "string" },
        "default": {}
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": true
    },
    "stateDef": {
      "type": "object",
      "required": ["initial"],
      "properties": {
        "type": { "type": "string" },
        "initial": {}
      },
      "patternProperties": {
        "^x-[a-zA-Z0-9_.-]+$": {}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
