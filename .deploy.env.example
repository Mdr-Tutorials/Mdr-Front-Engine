# Copy this file to .deploy.env and edit values before first deployment.
# Then run: ./scripts/start-all.sh

# Project path on server
REPO_DIR="$HOME/mdr-front-engine"

# Auto install missing dependencies in start-all.sh (1=enable, 0=disable)
AUTO_INSTALL_DEPS=1

# Go version used when auto-install is triggered
GO_VERSION=1.25.7

# Service ports
BACKEND_PORT=8080
FRONTEND_PORT=4173

# Public backend URL used by frontend build (use your domain)
VITE_API_BASE="https://api.your-domain.com"

# CORS allowlist for backend (comma-separated)
BACKEND_ALLOWED_ORIGINS="https://your-domain.com,https://www.your-domain.com"

# PostgreSQL connection URL
# Replace username/password/host/db
BACKEND_DB_URL="postgres://postgres:1234@127.0.0.1:5432/mdr_front_engine?sslmode=disable"
